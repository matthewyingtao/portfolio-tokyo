---
import BaseHead from "../components/BaseHead.astro";
import ExpandedContact from "../components/ExpandedContact.astro";
import FibbonaciHeading from "../components/FibbonaciHeading.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Header from "../components/Header.astro";
import Noise from "../components/Noise.astro";

import { projects } from "../content/projects.json";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title="Projects"
      description="A curated selection of Matthew Tao's best projects."
    />
  </head>
  <body class="mx-gutter overflow-x-hidden">
    <Noise />

    <Header />
    <main
      class="mb-20 flex flex-wrap justify-center gap-12 md:flex-nowrap md:justify-start xl:gap-24"
    >
      <FibbonaciHeading title="Projects" />
      <section class="mt-2 w-[42ch]">
        <ul class="flex flex-col gap-12">
          {
            projects.map(({ title, image, date, description }) => (
              <div class="flex flex-col gap-5">
                <div class="flex justify-between leading-[0.95]">
                  <h2>{title}</h2>
                  <FormattedDate date={new Date(date)} class="text-b-minato" />
                </div>

                <img src={image} alt="" class="aspect-video object-cover" />

                <p>{description}</p>
              </div>
            ))
          }
        </ul>
      </section>
      <ExpandedContact />
    </main>
  </body>
</html>
