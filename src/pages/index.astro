---
import BaseHead from "../components/layout/BaseHead.astro";
import ExpandedContact from "../components/layout/ExpandedContact.astro";
import Header from "../components/layout/Header.astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead />
  </head>
  <body class="mx-gutter overflow-x-hidden">
    <div class="noise"></div>

    <Header />
    <main
      class="flex gap-12 xl:gap-24 flex-wrap md:flex-nowrap justify-center md:justify-start mb-20"
    >
      <aside
        class="whitespace-nowrap relative hidden lg:block green-fade px-4 py-6 rounded-xl text-b-minato"
      >
        <img
          src="/dots.svg"
          alt=""
          class="absolute -z-10 left-0 top-0 -bottom-2 -translate-x-12"
        />
        <p>Second-year</p>
        <p class="mb-[4.5rem]">Computer science</p>

        <h1 class="text-4xl text-b-willow-dark mb-[4.5rem] leading-none">
          <span class="block font-medium mb-2">陶映渠</span>
          <span class="block">Tao Ying Qu</span>
        </h1>

        <div class="-translate-y-3">
          <span class="block mb-4">Designer</span>
          {
            Array.from({ length: 8 }).map((_, i) => (
              <span
                class="block leading-[0]"
                style={{
                  marginTop: 4 * 1.5 ** i + "px",
                }}
              >
                Developer
              </span>
            ))
          }
        </div>
      </aside>
      <section class="w-[32ch] text-b-gray">
        <p class="mb-16">
          <span class="text-b-willow-dark">Matthew Tao</span> is a front-end
          developer who enjoys exploring new technologies and tries to
          understand the underlying concepts behind them.
        </p>
        <ul class="flex flex-col gap-5">
          <li
            class="flex items-center justify-between gap-2 pb-3 relative after:absolute after:h-[1px] after:bg-b-willow after:w-[calc(100%+3rem)] after:left-0 after:-translate-x-6 after:bottom-0"
          >
            <a href="/blog">
              Read my
              <span class="text-b-willow-dark">blog</span> posts
            </a>
            <img src="/icons/externalArrow.svg" alt="" class="h-5 w-5" />
          </li>
          <li
            class="flex items-center justify-between gap-2 pb-3 relative after:absolute after:h-[1px] after:bg-b-willow after:w-[calc(100%+3rem)] after:left-0 after:-translate-x-6 after:bottom-0"
          >
            <a href="/projects">
              View my
              <span class="text-b-willow-dark">projects</span>
            </a>
            <img src="/icons/externalArrow.svg" alt="" class="h-5 w-5" />
          </li>
          <li
            class="flex items-center justify-between gap-2 pb-3 relative after:absolute after:h-[1px] after:bg-b-willow after:w-[calc(100%+3rem)] after:left-0 after:-translate-x-6 after:bottom-0"
          >
            <a href="/about">
              Find out more
              <span class="text-b-willow-dark">about me!</span>
            </a>
            <img src="/icons/externalArrow.svg" alt="" class="h-5 w-5" />
          </li>
          <li
            class="flex items-center justify-between gap-2 pb-3 relative after:absolute after:h-[1px] after:bg-b-willow after:w-[calc(100%+3rem)] after:left-0 after:-translate-x-6 after:bottom-0"
          >
            <a href="/uses">
              Check out my
              <span class="text-b-willow-dark">setup</span>
            </a>
            <img src="/icons/externalArrow.svg" alt="" class="h-5 w-5" />
          </li>
        </ul>
      </section>
      <ExpandedContact />
    </main>
  </body>
</html>
