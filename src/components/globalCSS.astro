        font-style: normal;
        font-display: swap;
    }

    @font-face {
        font-family: "PP Mori";
        src: url("/fonts/PPMori-RegularItalic.woff2") format("woff2"),
            url("/fonts/PPMori-RegularItalic.woff") format("woff");
