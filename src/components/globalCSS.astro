        font-style: italic;
        font-display: swap;
    }

    @font-face {
        font-family: "PP Mori";
        src: url("/fonts/PPMori-SemiBold.woff2") format("woff2"),
            url("/fonts/PPMori-SemiBold.woff") format("woff");
        font-weight: 600;
        font-style: normal;
        font-display: swap;
    }

    @font-face {
        font-family: "PP Mori Book";
        src: url("/fonts/PPMori-BookItalic.woff2") format("woff2"),
            url("/fonts/PPMori-BookItalic.woff") format("woff");
        font-weight: 300;
        font-style: italic;
        font-display: swap;
    }

    @font-face {
        font-family: "PP Mori";
        src: url("/fonts/PPMori-ExtralightItalic.woff2") format("woff2"),
            url("/fonts/PPMori-ExtralightItalic.woff") format("woff");
        font-weight: 100;
        font-style: italic;
        font-display: swap;
    }

    @font-face {
        font-family: "PP Mori Book";
        src: url("/fonts/PPMori-Book.woff2") format("woff2"),
            url("/fonts/PPMori-Book.woff") format("woff");
        font-weight: 300;
