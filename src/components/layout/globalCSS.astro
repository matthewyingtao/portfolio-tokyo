<!--  we put global CSS here because @apply does not get parsed in .css files -->
<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  body {
    font-family: "PP Mori", sans-serif;
    line-height: calc(1.2em + 1ex);
    @apply bg-b-white text-b-willow-dark text-lg;
  }

  :root {
    --gutter: 2rem;
  }

  @media screen and (min-width: 768px) {
    :root {
      --gutter: 8rem;
    }
  }

  @media screen and (min-width: 1440px) {
    :root {
      --gutter: 12rem;
    }
  }

  @font-face {
    font-family: "PP Mori";
    src:
      url("/fonts/PPMori-ExtraBold.woff2") format("woff2"),
      url("/fonts/PPMori-ExtraBold.woff") format("woff");
    font-weight: bold;
    font-style: normal;
    font-display: optional;
  }

  @font-face {
    font-family: "PP Mori";
    src:
      url("/fonts/PPMori-ExtraBoldItalic.woff2") format("woff2"),
      url("/fonts/PPMori-ExtraBoldItalic.woff") format("woff");
    font-weight: bold;
    font-style: italic;
    font-display: optional;
  }

  @font-face {
    font-family: "PP Mori";
    src:
      url("/fonts/PPMori-SemiBoldItalic.woff2") format("woff2"),
      url("/fonts/PPMori-SemiBoldItalic.woff") format("woff");
    font-weight: 600;
    font-style: italic;
    font-display: optional;
  }

  @font-face {
    font-family: "PP Mori";
    src:
      url("/fonts/PPMori-Regular.woff2") format("woff2"),
      url("/fonts/PPMori-Regular.woff") format("woff");
    font-weight: normal;
    font-style: normal;
    font-display: optional;
  }

  @font-face {
    font-family: "PP Mori";
    src:
      url("/fonts/PPMori-Extralight.woff2") format("woff2"),
      url("/fonts/PPMori-Extralight.woff") format("woff");
    font-weight: 100;
    font-style: normal;
    font-display: optional;
  }

  @font-face {
    font-family: "PP Mori";
    src:
      url("/fonts/PPMori-RegularItalic.woff2") format("woff2"),
      url("/fonts/PPMori-RegularItalic.woff") format("woff");
    font-weight: normal;
    font-style: italic;
    font-display: optional;
  }

  @font-face {
    font-family: "PP Mori";
    src:
      url("/fonts/PPMori-SemiBold.woff2") format("woff2"),
      url("/fonts/PPMori-SemiBold.woff") format("woff");
    font-weight: 600;
    font-style: normal;
    font-display: optional;
  }

  @font-face {
    font-family: "PP Mori Book";
    src:
      url("/fonts/PPMori-BookItalic.woff2") format("woff2"),
      url("/fonts/PPMori-BookItalic.woff") format("woff");
    font-weight: 300;
    font-style: italic;
    font-display: optional;
  }

  @font-face {
    font-family: "PP Mori";
    src:
      url("/fonts/PPMori-ExtralightItalic.woff2") format("woff2"),
      url("/fonts/PPMori-ExtralightItalic.woff") format("woff");
    font-weight: 100;
    font-style: italic;
    font-display: optional;
  }

  @font-face {
    font-family: "PP Mori Book";
    src:
      url("/fonts/PPMori-Book.woff2") format("woff2"),
      url("/fonts/PPMori-Book.woff") format("woff");
    font-weight: 300;
    font-style: normal;
    font-display: optional;
  }

  .content-md {
    @apply text-b-willow-dark;
  }

  .content-md > :first-child {
    @apply leading-[0.95] mt-0;
  }

  .content-md h1 {
    @apply text-3xl mb-[0.75ex] mt-[1.25em] text-b-gray;
  }

  .content-md h2 {
    @apply text-2xl mb-[0.75ex] mt-[1.25em] text-b-gray;
  }

  .content-md h3 {
    @apply text-xl mb-[0.75ex] mt-[1.25em] text-b-gray;
  }

  .content-md h4 {
    @apply text-lg mb-[0.75ex] mt-[1.25em] text-b-gray;
  }

  .content-md h5 {
    @apply text-base mb-[0.75ex] mt-[1.25em] text-b-gray;
  }

  .content-md p {
    @apply mb-[0.75ex] mt-[0.8ex];
  }

  .content-md pre {
    @apply p-4 border-b-willow border rounded-sm mb-6;
  }

  .content-md img {
    @apply mb-6;
  }

  .content-md ul {
    @apply list-disc list-inside;
  }

  .content-md ol {
    @apply list-decimal list-inside;
  }

  .noise {
    position: fixed;
    inset: 0;
    z-index: 500;
    mix-blend-mode: overlay;
    background-image: url(/noise.webp);
    pointer-events: none;
  }

  .green-fade {
    background: linear-gradient(180deg, #c8d5bb 0%, #e0f3cd 100%);
  }
</style>
