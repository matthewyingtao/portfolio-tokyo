---
export type props = {
  title: string;
};

const { title } = Astro.props;
---

<aside class="sticky top-8 mt-2 hidden h-fit whitespace-nowrap lg:block">
  <img
    src="/dotssmall.svg"
    alt=""
    class="absolute -bottom-2 left-0 top-0 -z-10 -translate-x-12"
  />
  {
    Array.from({ length: 8 }).map((_, i) => {
      const offset = 4 * 1.5 ** i;

      // translate-y-1 is to line-up with line-height: 0
      return (
        <span
          class:list={[
            "relative block translate-y-1 leading-[0]",
            i !== 0 && "text-b-willow",
          ]}
          style={{
            marginTop: offset + "px",
            zIndex: -i,
          }}
        >
          {title}
        </span>
      );
    })
  }
</aside>
